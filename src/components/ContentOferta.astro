      data-value-1="6"
      data-value-2="1.4"
    >
    </div>
  </div>
  <div class="mil-banner-content mil-up">
    <div class="container">
      <ul class="mil-breadcrumbs mil-mb-60">
        <li><a href={prefix} title="Start">Start</a></li>
        <li><a href={`${prefix}/oferta`} title={data.ofertatxt38}>{data.ofertatxt38}</a></li>
      </ul>
      <h1 class="mil-mb-60" set:html={data.heading} />
      <a
        href="#service"
        class="mil-link mil-dark mil-arrow-place mil-down-arrow"
      >
        <span>{data.ofertatxt1}</span>
      </a>
    </div>
  </div>
</div>
<!-- banner end -->

