---
const { langPrefix } = Astro.props;

// Ustaw domyślną wartość, jeśli nie zostanie przekazana (np. "/pl")
const prefix = langPrefix || "/pl";
---

<div class="mil-inner-banner mil-p-0-120">
  <div class="mil-banner-content mil-center mil-up">
    <div class="container">
      <ul class="mil-breadcrumbs mil-center mil-mb-60">
        <li><a href="/pl">Start</a></li>
        <li><a href="/pl/kontakt">Kontakt</a></li>
      </ul>
      <h1 class="mil-mb-60">Skontaktuj się<br />z Nami</h1>

      <div class="mil-divider mil-mb-60"></div>
      <div class="row justify-content-between">
        <div class="col-lg-5 mil-mb-60">
          <h6 class="mil-mb-30">Lubrza</h6>

          <p class="mil-dark-soft mil-up">
            66-218 Lubrza, Nowa Wioska 39<br />Polska<br /><span
              class="mil-no-wrap">(+48) 791 821 908</span
            >
          </p>
        </div>
        <div class="col-lg-5 mil-mb-60">
          <h6 class="mil-mb-30">Zielona Góra</h6>

          <p class="mil-dark-soft">
            65-463 Zielona Góra, ul.Prosta 45A<br />Polska<br /><span
              class="mil-no-wrap">+(48) 453 645 286</span
            >
          </p>
        </div>
      </div>

      <a
        href="#contact"
        class="mil-link mil-dark mil-arrow-place mil-down-arrow"
      >
        <span>Wyślij wiadomość</span>
      </a>
    </div>
  </div>
</div>

<section id="contact">
  <div class="container mil-p-120-90">
    <h2 class="mil-center mil-up mil-mb-120">
      Formularz <span class="mil-thin">Kontaktowy</span>
    </h2>
    <form
      id="contactform"
      action="/api/contact"
      method="post"
      class="row align-items-center"
    >
      <div class="col-lg-6 mil-up">
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Wpisz Imię i Nazwisko"
        />
      </div>
      <div class="col-lg-6 mil-up">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Wpisz adres e-mail"
        />
      </div>
      <div class="col-lg-12 mil-up">
        <select name="subject" id="subject">
          <option value="">Wybierz temat</option>
          <option value="Strona www">Strona www</option>
          <option value="Sklep internetowy">Sklep internetowy</option>
          <option value="Systemy CRM-ERP">Systemy CRM-ERP</option>
          <option value="Współpraca">Współpraca</option>
        </select>
      </div>
      <div class="col-lg-12 mil-up">
        <textarea name="message" id="message" placeholder="Treść wiadomości"
        ></textarea>
      </div>
      <div class="col-lg-8">
        <p class="mil-up mil-mb-30">
          <span class="mil-accent">*</span> Firma Maxsoft, nie ujawnia Twoich danych
          osobowych osobom trzecim.
        </p>
      </div>
      <div class="col-lg-4">
        <div class="mil-adaptive-right mil-up mil-mb-30">
          <button type="submit" class="mil-button mil-arrow-place">
            <span>Wyślij wiadomość</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</section>
