---
const { langPrefix } = Astro.props;
const prefix = langPrefix || "/pl";
const { data, prevProject, nextProject } = Astro.props;

// Ustalenie ścieżek nawigacyjnych
const prevHref = prevProject.slug ? `/${prevProject.slug}` : null;
const nextHref = nextProject.slug ? `/${nextProject.slug}` : null;
---

<!-- banner -->
<div class="mil-inner-banner">
  <div class="mil-banner-content mil-up">
    <div class="mil-animation-frame">
      <div
        class="mil-animation mil-position-4 mil-dark mil-scale"
        data-value-1="6"
        data-value-2="1.4"
      >
      </div>
    </div>
    <div class="container">
      <ul class="mil-breadcrumbs mil-mb-60">
        <li><a href={prefix}>Start</a></li>
        <li>
          <a href={`${prefix}/projekty`} title={data.projekttxt01}
            >{data.projekttxt01}</a
          >
        </li>
        <li><a href="#project" title={data.title}>{data.title}</a></li>
      </ul>
      <h1 class="mil-mb-60" set:html={data.heading} />
      <a
        href="#project"
        class="mil-link mil-dark mil-arrow-place mil-down-arrow"
      >
        <span>{data.projekttxt02}</span>
      </a>
    </div>
  </div>
</div>
<!-- banner end -->

<!-- project -->
<section>
  <div class="container mil-p-120-120" id="project">
    <div class="row justify-content-between mil-mb-120">
      <div class="col-lg-4">
        <div class="mil-p-0-120">
          <ul class="mil-service-list mil-dark mil-mb-60">
            <li class="mil-up">
              {data.projekttxt03}: &nbsp;<span class="mil-dark"
                >{data.projekttxt14}</span
              >
            </li>
            <li class="mil-up">
              {data.projekttxt04}: &nbsp;<span class="mil-dark"
                >{data.projekttxt15}</span
              >
            </li>
            <li class="mil-up">
              {data.projekttxt05}: &nbsp;<span class="mil-dark">Maxsoft</span>
            </li>
          </ul>

          <h5 class="mil-up mil-mb-30">{data.projekttxt06}</h5>

          <p class="mil-up mil-mb-30">
            {data.projekttxt07}
          </p>

          <p class="mil-up mil-mb-60">
            {data.projekttxt08}
          </p>

          <a
            data-no-swup
            href={data.projekttxt09}
            target="_blank"
            rel="noreferrer nofollow"
            class="mil-link mil-dark mil-up mil-arrow-place"
            title={data.projekttxt10}
          >
            <span>{data.projekttxt10}</span>
          </a>
        </div>
      </div>
      <div class="col-lg-7">
        <div class="mil-image-frame mil-horizontal mil-up mil-mb-30">
          <img src={`/img/works/${data.number}/1.webp`} alt={data.title} />
          <a
            data-fancybox="gallery"
            data-no-swup
            href={`/img/works/${data.number}/1.webp`}
            class="mil-zoom-btn"
            title="Zoom"
          >
            <img src="/img/icons/zoom.svg" alt="zoom" />
          </a>
        </div>
        <div class="mil-image-frame mil-horizontal mil-up mil-mb-30">
          <img src={`/img/works/${data.number}/2.webp`} alt={data.title} />
          <a
            data-fancybox="gallery"
            data-no-swup
            href={`/img/works/${data.number}/2.webp`}
            class="mil-zoom-btn"
            title="Zoom"
          >
            <img src="/img/icons/zoom.svg" alt="zoom" />
          </a>
        </div>
      </div>
    </div>
    <div class="mil-works-nav mil-up">
      <a
        href={prevHref}
        class="mil-link mil-dark mil-arrow-place mil-icon-left"
        title={data.projekttxt12}
      >
        <span>{data.projekttxt12}</span>
      </a>
      <a
        href={`${prefix}/projekty`}
        class="mil-link mil-dark"
        title={data.projekttxt11}
      >
        <span>{data.projekttxt11}</span>
      </a>
      <a
        href={nextHref}
        class="mil-link mil-dark mil-arrow-place"
        title={data.projekttxt13}
      >
        <span>{data.projekttxt13}</span>
      </a>
    </div>
  </div>
</section>
<!-- project end -->

<!-- call to action -->
<section class="mil-soft-bg">
  <div class="container mil-p-120-120">
    <div class="row">
      <div class="col-lg-10">
        <span
          class="mil-suptitle mil-suptitle-right mil-suptitle-dark mil-up"
          set:html={data.content}
        />
      </div>
      <div class="mil-center">
        <h2 class="mil-up mil-mb-60" set:html={data.projekttxt16} />
        <div class="mil-up">
          <a
            href={`${prefix}/kontakt`}
            class="mil-button mil-arrow-place"
            title={data.projekttxt17}><span>{data.projekttxt17}</span></a
          >
        </div>
      </div>
    </div>
  </div>
  <!-- call to action end -->
</section>
